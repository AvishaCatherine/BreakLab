{
  "manifest_version": 3,
  "name": "BreakLab",
  "description": "Break your site safely before your users do.",
  "version": "3.9.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["scripting", "activeTab", "storage", "tabs"],
  "host_permissions": [
    "<all_urls>",
    "https://*.googleapis.com/*",
    "https://*.ai.google/*",
    "https://*.generative.ai/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}


